<!DOCTYPE html>
<html>
  <head>
    <title>CodeLab</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

<header>
  <nav>
    <span class="lab-logo">Code Lab</span>
    <% if user_signed_in? %>
    <ul class="list-signin">
      <li class="list">
        <%= link_to 'プロフィール', user_path(current_user.id),class: "link-color" %>
      </li>
      <li class="list">
        <%= link_to 'もくもく会一覧', labs_path,class: "link-color" %>
      </li>
      <li class="list">
        <%= link_to "いいね一覧", "/users/#{current_user.id}/favorites",class: "link-color" %>
      </li>
      <li class="list">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "link-color" %>
      </li>
    </ul>
    <% else %>
    <ul class="list-signin">
      <li class="list">
        <%= link_to 'Home', root_path,class: "link-color" %>
      </li>
      <li class="list">
        <%= link_to 'About', homes_about_path,class: "link-color" %>
      </li>
      <li class="list">
        <%= link_to "新規登録", new_user_registration_path,class: "link-color" %>
      </li>
      <li class="list">
        <%= link_to "ログイン", new_user_session_path,class: "link-color" %>
      </li>
    </ul>
    <% end %>
  </nav>
</header>




    <%= yield %>
  </body>
</html>
