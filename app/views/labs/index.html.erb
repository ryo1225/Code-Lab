<div class="container">
	<div class="row">
	<span><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></span>
		<h2>もくもく会一覧</h2>


		<div class="col-md-9 col-md-offset-2">
			 <% @labs.each do |lab| %>
			  <p><%= attachment_image_tag lab, :image, :fill, 700, 300, format: 'jpeg' %></p>
			  <h2><%= link_to lab.title,lab_path(lab) %></h2>
			  <p><b>開催者一言</b> <%= lab.introduction %></p>
			  <p><b>日時　</b><%= lab.month %>月<%= lab.day %>日 <%= lab.time %>時〜</p>
			  <p><b>地域</b> <%= lab.region %> <b>場所詳細</b> <%= lab.place %></p>
			  <p><b>扱う言語</b> <%= lab.language %></p>
			  <p><b>参加価格</b> <%= lab.price %>円　<b>参加人数</b> <%= lab.people %>人</p>
			 <% end %>
		</div>



	</div>
</div>
