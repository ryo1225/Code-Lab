<div class="container">
  <div class="row">
          <div class="col-md-8 col-md-offset-3">

              <h2 class="home-title">新規登録画面</h2>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="form-group">
                    <%= f.label :名前,class:"col-md-3" %>
                    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :メールアドレス,class:"col-md-3" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :"パスワード(6文字以上)",class:"col-md-3" %>
                    <% if @minimum_password_length %>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :確認用パスワード,class:"col-md-3" %>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                  </div>

          <div class="col-md-10 col-md-offset-2">
                  <div class="actions">
                    <%= f.submit "新規登録",class:"btn btn-success" %>
                  </div>
                <% end %>
          </div>

        <h2 class="recruit-text">採用担当者様</h2>
        <h4><%= link_to 'こちら',new_user_session_path %>からログインしてください。</h4>

    </div>
  </div>
</div>
