<div class="container">
	<div class="row">

		<div class="col-md-4 col-md-offset-4">
		       <% if @user.errors.any? %>
		            <h4 class="comment-color"><%= @user.errors.count %>件のエラー</h4>
		                <ul>
		                  <% @user.errors.full_messages.each do |message| %>
		                    <li class="comment-color"><%= message %></li>
		                  <% end %>
		                </ul>
		        <% end %>
		</div>

		<div class="col-md-8 col-md-offset-4">
			<h2 class="user-edit-title"><b>User編集ページ</b></h2>
			<%= form_for(@user) do |f| %>
				<div class="form-group">
					<%= f.attachment_field :profile_image %>
				</div>
				<div class="form-group">
					<%= f.label  :名前, class: "col-md-3" %>
					<%= f.text_field :name, autofocus: true %>
				</div>
				<div class="form-group">
					<%= f.label  :メールアドレス, class: "col-md-3" %>
					<%= f.text_area :email, autofocus: true %>
				</div>
				<div class="form-group">
					<%= f.label  :自己紹介, class: "col-md-3" %>
					<%= f.text_area :word, autofocus: true %>
				</div>
				<div class="field">
					<%= f.submit '編集内容を保存する', class:"btn btn-success col-md-offset-2"%>
				</div>
			<% end %>
		</div>

	</div>
</div>