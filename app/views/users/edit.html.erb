<div class="container">
	<div class="row">

			<h2>User編集ページ</h2>


		<div class="col-md-8 col-md-offset-4">
			<%= form_for(@user) do |f| %>
				<div class="form-group">
					<%= f.attachment_field :profile_image %>
				</div>
				<div class="form-group">
					<%= f.label  :名前, class: "col-md-3" %>
					<%= f.text_field :name, autofocus: true %>
				</div>
				<div class="form-group">
					<%= f.label  :メールアドレス, class: "col-md-3" %>
					<%= f.text_area :email, autofocus: true %>
				</div>
				<div class="form-group">
					<%= f.label  :自己紹介, class: "col-md-3" %>
					<%= f.text_area :word, autofocus: true %>
				</div>
				<div class="field">
					<%= f.submit 'Updeta User', class:"btn btn-success"%>
				</div>
			<% end %>



		</div>

	</div>
</div>