<div class="container">
	<div class="row">

			<h2>User Info</h2>

	  <div class="col-md-10">
	  	<div class="col-md-4 col-md-offset-3">
	  		<div class="form-group">
	  			<p>
	  		 	<%= attachment_image_tag(@user, :profile_image, :fill, 250, 180, fallback: "no-image", size:'250x180') %>
	  			</p>
	  		</div>
	  	</div>
	  	<div class="col-md-5">
	  		<div class="form-group">
	  			<h4><b>名前</b>：<%= @user.name %></h4>
	  		</div>
	  		<div class="form-group">
	  			<h4><b>メールアドレス：</b><br><%= @user.email %></h4>
	  		</div>
	  		<div class="form-group">
	  			<h4><b>自己紹介：</b><br><%= @user.word %></h4>
	  		</div>
	  		<div class="col-md-4 col-md-offset-8">
	  			<%=link_to '編集する',edit_user_path(@user),class:"btn btn-primary" %>
	  		</div>
	  	</div>
	  </div>
	</div>

	<div class="row">
	  <div class="col-md-10">
	  		<h2>以前のもくもく会開催</h2>
	  		<% @labs.each do |lab| %>
	  		<div class=”col-md-3”>
				<p><%= attachment_image_tag lab, :image, :fill, 350, 200, format: 'jpeg' %></p>
	  			<h4><%= link_to lab.title,lab_path(lab) %></h4>
	  			<p><b>地域</b> <%= lab.region %> <b>場所</b> <%= lab.place %></p>
			  	<p><b>日時　</b><%= lab.month %>月<%= lab.day %>日 <%= lab.time %>時〜</p>
			  	<p><b>扱う言語</b> <%= lab.language %></p>
			  	<p><b>参加価格</b> <%= lab.price %>円　<b>参加人数</b> <%= lab.people %>人</p>
	  		</div>
	  		<% end %>

	  			<%= paginate @labs, class: "paginate" %>
	  </div>



	</div>
</div>