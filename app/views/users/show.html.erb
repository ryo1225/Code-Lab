<div class="container">
	<div class="row">

			<h2>User Info</h2>

	  <div class="col-md-10">
	  	<div class="col-md-3 col-md-offset-3">
	  		<div class="form-group">
	  			<p>
	  		 	<%= attachment_image_tag(@user, :profile_image, :fill, 180, 180, fallback: "no-image", size:'180x180') %>
	  			</p>
	  		</div>
	  	</div>
	  	<div class="col-md-5">
	  		<div class="form-group">
	  			<h4><b>名前</b>：<%= @user.name %></h4>
	  		</div>
	  		<div class="form-group">
	  			<h4><b>メールアドレス：</b><br><%= @user.email %></h4>
	  		</div>
	  		<div class="form-group">
	  			<h4><b>自己紹介：</b><br><%= @user.word %></h4>
	  		</div>
	  		<div class="col-md-4 col-md-offset-8">
	  			<%=link_to '編集する',edit_user_path(@user),class:"btn btn-primary" %>
	  		</div>
	  	</div>
	  </div>


	  <div class="col-md-8">
	  		<h2>以前のもくもく会開催</h2>
	  		<% @labs.each do |lab| %>
	  			<p><%= lab.title %></p>
	  			<p><%= lab.introduction %></p>
	  		<% end %>
	  </div>



	</div>
</div>